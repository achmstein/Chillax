{
  "openapi": "3.1.1",
  "info": {
    "title": "Chillax - Rooms HTTP API",
    "description": "The Rooms Microservice HTTP API for PlayStation room reservations and session management",
    "version": "1.0"
  },
  "paths": {
    "/api/rooms": {
      "get": {
        "tags": [
          "Rooms"
        ],
        "summary": "List all rooms",
        "description": "Get all PlayStation rooms with their current status",
        "operationId": "ListRooms",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rooms/{id}": {
      "get": {
        "tags": [
          "Rooms"
        ],
        "summary": "Get room by ID",
        "description": "Get a specific room by its ID",
        "operationId": "GetRoom",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The room ID",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/rooms/available": {
      "get": {
        "tags": [
          "Rooms"
        ],
        "summary": "Get available rooms",
        "description": "Get only rooms that are currently available for reservation",
        "operationId": "GetAvailableRooms",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rooms/{id}/status": {
      "put": {
        "tags": [
          "Rooms"
        ],
        "summary": "Update room status",
        "description": "Update the status of a room (Admin only)",
        "operationId": "UpdateRoomStatus",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The room ID",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "The new status",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/RoomStatus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          { }
        ]
      }
    },
    "/api/rooms/{roomId}/reserve": {
      "post": {
        "tags": [
          "Reservations"
        ],
        "summary": "Reserve a room",
        "description": "Create a reservation for a room",
        "operationId": "ReserveRoom",
        "parameters": [
          {
            "name": "roomId",
            "in": "path",
            "description": "The room ID to reserve",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReserveRoomRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RoomSession"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "security": [
          { }
        ]
      }
    },
    "/api/rooms/sessions/{sessionId}/start": {
      "post": {
        "tags": [
          "Sessions"
        ],
        "summary": "Start a session",
