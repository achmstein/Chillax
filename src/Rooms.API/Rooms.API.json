    "/api/rooms/sessions/{sessionId}": {
      "get": {
        "tags": [
          "Sessions"
        ],
        "summary": "Get session by ID",
        "description": "Get a specific session by its ID",
        "operationId": "GetSession",
        "parameters": [
          {
            "name": "sessionId",
            "in": "path",
            "description": "The session ID",
            "required": true,
